datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    			Int     @id @default(autoincrement())
  username  		String     @unique
  password 			String
  email 			String     @unique
  avatar 			String		@default("img_avatar.png")
  status 			Boolean     @default(false)  
  wins				Int @default(0)
  losses 			Int @default(0)

  player 			Player?

	// friendships where user is user1
  friends1  Friend[] @relation("User1Friends")
	// friendships where user is user2
  friends2  Friend[] @relation("User2Friends")

}

model Player {
    id            Int   @id @default(autoincrement())
    userId        Int     @unique
    x             Int @default(0)
    y             Int @default(0)

    user          User   @relation(fields: [userId], references: [id])
}

model Friend {
    id    		    Int 	 @id @default(autoincrement())    
	username1		String   
	username2		String 
	status		    Status	 @default(NO_RELATION)

	user1     		User	@relation("User1Friends", fields: [username1], references: [username])
	user2     		User	@relation("User2Friends", fields: [username2], references: [username])
}

enum Status {
	NO_RELATION
	PENDING
	SENT
	RECEIVED
	ACCEPTED
	REJECTED
	BLOCKED
}

